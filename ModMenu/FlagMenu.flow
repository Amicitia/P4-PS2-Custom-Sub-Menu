int Flag_Menu()
{
	while(true)
	{
		SET_SEL_CHOICE_KEYBIND(14, 10);
		SET_SEL_CHOICE_KEYBIND(15, 11);
		int flag = ADV_SEL(Flag_Menu_Text, Flag_Menu, 0);
		switch (flag) 
		{
			case 0:
				ToggleBit();
				return 0;
			case 1:
				ToggleBitRange();
				return 0;
			case 2:
				KillQuests();
				return 0;
			case 3:
				ReviveQuests();
				return 0;
			case 10:
				return -1;
			case 11:
				return 0;
		}
	}
	return 0;
}

void ToggleBit()
{
	int major = Get_Number(4, MSG_4);
	if (major == -1)
		return;
	int toggle = ADV_SEL(OnOff_Text, OnOff, 0);
	if (toggle == 0)
	{
		BIT_ON(major);
	}
	else
	{
		BIT_OFF(major);
	}
}

void ToggleBitRange()
{
	int major = Get_Number(4, MSG_4_Major);
	if (major == -1)
		return;
	int minor = Get_Number(4, MSG_4_Minor);
	if (minor == -1)
		return;
	int i = major;
	int toggle = ADV_SEL(OnOff_Text, OnOff, 0);
	if (toggle == 0)
	{
		while (i <= minor)
		{
			BIT_ON(i);
			i++;
		}
	}
	else
	{
		while (i <= minor)
		{
			BIT_OFF(i);
			i++;
		}
	}
}

