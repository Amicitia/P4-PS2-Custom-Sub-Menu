void into_tv_world_hook()
{
    BIT_OFF( 0 + 0x0400 + 0x0800 + 3 );
    
    if ( CHECK_TIME_SPAN( 4, 17, 6, 6 ) == 1 )
    {
        ADD_PARTY( 2 );
    }

    // Require Chie to be unlocked in case you're using the Intro Skip mod
    if ( CHECK_TIME_SPAN( 4, 18, 6, 6 ) == 1 && BIT_CHK( 49 ) )
    {
        ADD_PARTY( 3 );
    }
	
    if ( CHECK_TIME_SPAN( 4, 30, 6, 6 ) == 1 )
    {
        ADD_PARTY( 4 );
    }

}