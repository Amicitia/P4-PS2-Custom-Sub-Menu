import( "Utilities.msg" );

void Message_Window(int messageNum)
{
    OPEN_MSG_WIN();
    MSG( messageNum );
    CLOSE_MSG_WIN();
}

int Get_Number(int digitNum, int helpText)
{
	tryagain:
	int digit = 0;
	int n = 0;
	_OpenNumMenu:
	while (n < digitNum)
	{
		int select = ADV_SEL( helpText, Num_Menu, 0);
		if (select > 6)
		{
			select = ADV_SEL( helpText, Num_Menu2, 0) + 7;
			if (select == 10)
			{
				goto _OpenNumMenu;
			}
		}
		digit *= 10;
		digit += select;
		n += 1;
	}
	PRINT_DEBUG(0, digit, 0);
	OPEN_MSG_WIN();
    MSG( ConfirmNumber );
	int confirm = SEL(YESNO_SEL);
	CLOSE_MSG_WIN();
	if (confirm == 1)
		goto tryagain;
	return(digit);
}