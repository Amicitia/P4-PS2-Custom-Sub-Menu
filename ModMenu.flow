import( "ModMenu.msg" );
import( "Utilities.flow" );

void ModMenuDisplay()
{
	int selection = FUNCTION_0025(Mod_Menu_Text, Mod_Menu, 0);
	switch (selection)
	{
		case 0:
			BGMSelect();
			break;
		case 1:
			FieldSelect();
			break;
		case 2:
			EventSelect();
			break;
		case 3:
			BattleSelect();
			break;
		case 4:
			Facilities();
			break;
		case 5:
			DateSelect();
			break;
		case 6:
			Misc();
			break;
	}
}

void BGMSelect()
{
	int bgm = Get_Number(5, MSG_5);
	CALL_BGM(bgm);
}

void FieldSelect()
{
	int major = Get_Number(3, MSG_3_Major);
	int minor = Get_Number(3, MSG_3_Minor);
	OUTRO(2, 5);
	OUTRO_SYNC();
	CALL_FIELD(major, minor, 0, 0);
}

void EventSelect()
{
	int major = Get_Number(3, MSG_3_Major);
	int minor = Get_Number(3, MSG_3_Minor);
	OUTRO(2, 5);
	OUTRO_SYNC();
	CALL_EVENT(major, minor, 0);
	CALL_FIELD(20, 1, 0, 0);
}

void BattleSelect()
{
	int battle = FUNCTION_0025(BATTLE_SEL_Text, BATTLE_SEL, 0);
	if (battle == 0)
	{
		int major = Get_Number(3, MSG_3);
		CALL_BATTLE(major, 0);
	}
	else if (battle == 1)
	{
		Battles();
	}
}

void DateSelect()
{
	int major = Get_Number(2, MSG_2_Major);
	int minor = Get_Number(2, MSG_2_Minor);
	NEXT_DATE(major, minor, 0);
}

